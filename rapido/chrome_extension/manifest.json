{
  "manifest_version": 3,
  "name": "Tab Capture Automation",
  "version": "1.0.0",
  "description": "Automated tab capture for browser automation",
  
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "offscreen",
    "downloads"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "https://test.creatium.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_title": "Tab Capture Automation"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
